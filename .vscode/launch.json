    "version": "0.2.0",
    "configurations": [
        {
            "name": "g++-9 - Criar e depurar o arquivo ativo",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tests/mjc_tests",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/tests/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Habilitar a reformatação automática para gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++-9 build active file",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}